#!/usr/bin/make -f

override_dh_auto_configure:
	ln -s . libsolv
	cmake -DDISABLE_SHARED=1 -DCMAKE_BUILD_TYPE=Release -DCMAKE_SKIP_RPATH=1 -DENABLE_RPMPKG=1 -DENABLE_DEBIAN=1 -DENABLE_ARCHREPO=1 -DENABLE_APK=1 -DENABLE_LZMA_COMPRESSION=1 -DENABLE_ZSTD_COMPRESSION=1 -DENABLE_COMPLEX_DEPS=1 -DMULTI_SEMANTICS=1 -DCMAKE_INSTALL_PREFIX=/usr
	make
	dh_auto_configure -- --bundled-libsolv

%:
	dh $@


